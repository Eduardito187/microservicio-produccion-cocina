{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://produccion-cocina.local/schemas/outbound-produccion.json",
  "title": "OutboundProduccionPayloads",
  "oneOf": [
    {
      "title": "OrdenProduccionCreada",
      "type": "object",
      "required": ["id", "ordenProduccionId", "fecha", "estado", "itemsCount", "batchesCount", "itemsDespachoCount"],
      "properties": {
        "id": { "type": "string", "format": "uuid" },
        "ordenProduccionId": { "type": "string", "format": "uuid" },
        "fecha": { "type": "string", "format": "date-time" },
        "estado": { "type": "string", "enum": ["CREADA"] },
        "itemsCount": { "type": "integer", "minimum": 0 },
        "batchesCount": { "type": "integer", "minimum": 0 },
        "itemsDespachoCount": { "type": "integer", "minimum": 0 }
      }
    },
    {
      "title": "OrdenProduccionPlanificada",
      "type": "object",
      "required": ["id", "ordenProduccionId", "fecha", "estadoAnterior", "estadoActual", "itemsCount", "batchesCount", "itemsDespachoCount"],
      "properties": {
        "id": { "type": "string", "format": "uuid" },
        "ordenProduccionId": { "type": "string", "format": "uuid" },
        "fecha": { "type": "string", "format": "date-time" },
        "estadoAnterior": { "type": "string", "enum": ["CREADA"] },
        "estadoActual": { "type": "string", "enum": ["PLANIFICADA"] },
        "itemsCount": { "type": "integer", "minimum": 0 },
        "batchesCount": { "type": "integer", "minimum": 0 },
        "itemsDespachoCount": { "type": "integer", "minimum": 0 }
      }
    },
    {
      "title": "OrdenProduccionProcesada",
      "type": "object",
      "required": ["fecha"],
      "properties": {
        "fecha": { "type": "string" }
      }
    },
    {
      "title": "OrdenProduccionCerrada",
      "type": "object",
      "required": ["fecha"],
      "properties": {
        "fecha": { "type": "string" }
      }
    },
    {
      "title": "ProduccionBatchCreado",
      "type": "object",
      "required": ["ordenProduccionId", "estacionId", "qty", "posicion"],
      "properties": {
        "ordenProduccionId": { "type": "string" },
        "estacionId": { "type": "string" },
        "productoId": { "type": "string" },
        "recetaVersionId": { "type": "string" },
        "porcionId": { "type": "string" },
        "qty": { "type": "integer", "minimum": 1 },
        "posicion": { "type": "integer", "minimum": 1 }
      }
    },
    {
      "title": "PaqueteParaDespachoCreado",
      "type": "object",
      "required": ["id", "number", "patientId", "patientName", "deliveryAddress", "deliveryLatitude", "deliveryLongitude", "deliveryDate"],
      "properties": {
        "id": { "type": "string", "format": "uuid" },
        "number": { "type": "string" },
        "patientId": { "type": "string", "format": "uuid" },
        "patientName": { "type": "string" },
        "deliveryAddress": { "type": "string" },
        "deliveryLatitude": { "type": "number" },
        "deliveryLongitude": { "type": "number" },
        "deliveryDate": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" }
      }
    },
    {
      "title": "ProductoCreado",
      "type": "object",
      "properties": {
        "sku": { "type": "string" },
        "price": { "type": "number" },
        "special_price": { "type": "number" }
      }
    },
    {
      "title": "ProductoActualizado",
      "type": "object",
      "properties": {
        "sku": { "type": "string" },
        "price": { "type": "number" },
        "special_price": { "type": "number" }
      }
    },
    {
      "title": "RecetaVersionCreada",
      "type": "object",
      "required": ["nombre", "ingredientes"],
      "properties": {
        "nombre": { "type": "string" },
        "version": { "type": "integer", "minimum": 1 },
        "nutrientes": { "type": "object" },
        "ingredientes": { "type": "array" },
        "description": { "type": "string" },
        "instructions": { "type": "string" },
        "totalCalories": { "type": "integer", "minimum": 0 }
      }
    },
    {
      "title": "RecetaVersionActualizada",
      "type": "object",
      "required": ["nombre", "ingredientes"],
      "properties": {
        "nombre": { "type": "string" },
        "version": { "type": "integer", "minimum": 1 },
        "nutrientes": { "type": "object" },
        "ingredientes": { "type": "array" },
        "description": { "type": "string" },
        "instructions": { "type": "string" },
        "totalCalories": { "type": "integer", "minimum": 0 }
      }
    }
  ]
}
