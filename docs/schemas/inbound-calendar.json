{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://produccion-cocina.local/schemas/inbound-calendar.json",
  "title": "InboundCalendarEvents",
  "oneOf": [
    {
      "title": "calendario.servicio.generar",
      "type": "object",
      "required": ["contratoId", "diasPermitidos", "horarioPreferido"],
      "properties": {
        "contratoId": { "type": "string", "format": "uuid" },
        "diasPermitidos": { "type": "array", "items": { "type": "string" } },
        "horarioPreferido": { "type": "string" }
      }
    },
    {
      "title": "calendario.generado",
      "type": "object",
      "required": ["contratoId", "listaFechasEntrega"],
      "properties": {
        "contratoId": { "type": "string", "format": "uuid" },
        "listaFechasEntrega": { "type": "array", "items": { "type": "string" } }
      }
    },
    {
      "title": "CalendarioEntregaCreado",
      "type": "object",
      "required": ["calendarioId", "fecha"],
      "properties": {
        "calendarioId": { "type": "string", "format": "uuid" },
        "fecha": { "type": "string" }
      }
    },
    {
      "title": "EntregaProgramada",
      "type": "object",
      "required": ["calendarioId", "itemDespachoId"],
      "properties": {
        "calendarioId": { "type": "string", "format": "uuid" },
        "itemDespachoId": { "type": "string", "format": "uuid" },
        "ordenProduccionId": { "type": "string", "format": "uuid" },
        "items": { "type": "array" },
        "itemsDespacho": { "type": "array" }
      }
    },
    {
      "title": "DiaSinEntregaMarcado",
      "type": "object",
      "required": ["calendarioId"],
      "properties": {
        "calendarioId": { "type": "string", "format": "uuid" },
        "fecha": { "type": "string" }
      }
    },
    {
      "title": "DireccionEntregaCambiada",
      "type": "object",
      "required": ["direccionId"],
      "properties": {
        "paqueteId": { "type": "string", "format": "uuid" },
        "itemDespachoId": { "type": "string", "format": "uuid" },
        "direccionId": { "type": "string", "format": "uuid" }
      }
    }
  ]
}
